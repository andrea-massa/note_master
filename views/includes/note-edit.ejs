<!-- Div for the pop up allowing you to edit the note -->
                <div class="col-10 col-md-8 m-2 note-edit-container hidden" style="background-color:<%= note.color %>">                    
                    <form action="/<%= userData.userId %>/notes/<%= note._id %>?_method=PUT" method="POST">                        
                        <input class="form-control note-title" type="text" name="new_note_title" value="<%= note.title %>">
                        <hr>
                        <textarea class="form-control note-content" rows="40" name="new_note_content"><%= note.content %></textarea>                                                                        
                        <div class="my-3 d-flex flex-column justify-content-center note-edit-form-button-container">                            
                            <%- include('color-picker', {newNote: false, selectedColor: note.color}) %>
                            <div class="mt-3 d-flex flex-row justify-content-end align-content-center">
                                <a href="/<%= userData.userId %>/notes" class="btn btn-sm my-1 mx-2">
                                    <svg xmlns="http://www.w3.org/2000/svg" width="30" height="30" fill="currentColor" class="bi bi-x-circle" viewBox="0 0 16 16">
                                        <path d="M8 15A7 7 0 1 1 8 1a7 7 0 0 1 0 14zm0 1A8 8 0 1 0 8 0a8 8 0 0 0 0 16z"/>
                                        <path d="M4.646 4.646a.5.5 0 0 1 .708 0L8 7.293l2.646-2.647a.5.5 0 0 1 .708.708L8.707 8l2.647 2.646a.5.5 0 0 1-.708.708L8 8.707l-2.646 2.647a.5.5 0 0 1-.708-.708L7.293 8 4.646 5.354a.5.5 0 0 1 0-.708z"/>
                                    </svg>
                                </a>
                                <button type="submit" class="btn btn-sm my-1 mx-2">
                                    <svg xmlns="http://www.w3.org/2000/svg" width="30" height="30" fill="currentColor" class="bi bi-check-circle" viewBox="0 0 16 16">
                                        <path d="M8 15A7 7 0 1 1 8 1a7 7 0 0 1 0 14zm0 1A8 8 0 1 0 8 0a8 8 0 0 0 0 16z"/>
                                        <path d="M10.97 4.97a.235.235 0 0 0-.02.022L7.477 9.417 5.384 7.323a.75.75 0 0 0-1.06 1.06L6.97 11.03a.75.75 0 0 0 1.079-.02l3.992-4.99a.75.75 0 0 0-1.071-1.05z"/>
                                    </svg>
                                </button>
                            </div>                            
                        </div>
                    </form>                
                </div>